{
  "name": "raptor",
  "private": true,
  "description": "Raptor",
  "scripts": {
    "clean": "yarn run clean:packages",
    "lint": " lerna run lint",
    "test": "lerna run test",
    "build": "lerna run build",
    "build:compiler": "webpack --config scripts/compiler.webpack.js --progress",
    "start": "lerna exec yarn start --scope raptor-engine",
    "clean:dist": "rimraf dist/",
    "clean:node_modules": "lerna exec -- rm -rf ./node_modules && rm -rf ./node_modules",
    "clean:packages": "lerna run clean",

    "prepublish": "lerna bootstrap --concurrency 1 && yarn run build",
    "release": "yarn run preversion && lerna publish --skip-temp-tag --exact"
  },
  "repository": {
    "type": "git",
    "url": "https://git.soma.salesforce.com/raptor/raptor.git"
  },
  "bin": {
    "raptor-template": "bin/raptor-template-cli.js"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.4.0",
    "babel-preset-env": "^1.2.1",
    "babel-preset-flow": "^6.23.0",
    "babili": "0.0.12",
    "cross-env": "^3.1.4",
    "eslint": "^3.0.1",
    "eslint-plugin-flowtype": "^2.7.1",
    "flow-bin": "^0.39.0",
    "lerna": "2.0.0-beta.38",
    "mocha": "^3.2.0",
    "power-assert": "^1.4.2",
    "rimraf": "^2.5.4",
    "typedef-converter": "^0.1.4",
    "webpack": "^2.2.1"
  }
}
