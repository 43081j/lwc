{
  "name": "raptor-compiler",
  "license": "MIT",
  "private": true,
  "scripts": {
    "localpublish": "npm build && lerna publish --skip-npm --skip-git --exact --yes && npm run build:all",
    "prepublish": "lerna bootstrap && lerna run build",
    "preversion": "npm run lint && npm run clean && npm run build",
    "test": "lerna run test",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "flow": "flow --show-all-errors",
    "build": "lerna run build",
    "build:compiler": "npm build && webpack --config scripts/webpack.commonjs-module.js",
    "build:compilermin": "npm build && webpack --config scripts/webpack.commonjs-module.js --env.prod=true",
    "build:webcompiler": "npm build && webpack --config scripts/webpack.web.js",
    "build:webcompilermin": "npm build && webpack --config scripts/webpack.web.js --env.prod=true",
    "build:all": "npm run build:compiler && npm run build:compilermin && npm run build:webcompiler && npm run build:webcompilermin",
    "template-cli": "./packages/babel-plugin-transform-raptor-template/scripts/cli.js",
    "compiler-cli": "./packages/raptor-compiler-core/scripts/cli.js",
    "htmlparser-cli": "./packages/raptor-html-cleanup-transform/scripts/cli.js"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "eslint": "^3.13.1",
    "eslint-plugin-flowtype": "^2.30.0",
    "flow-bin": "^0.39.0",
    "lerna": "2.0.0-beta.37",
    "mocha": "^3.1.2",
    "rimraf": "^2.5.4",
    "string-replace-webpack-plugin": "0.0.5",
    "webpack": "^2.2.0",
    "webpack-closure-compiler": "^2.1.3"
  },
  "engines": {
    "node": ">=6"
  }
}
