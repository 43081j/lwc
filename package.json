{
  "name": "raptor",
  "private": true,
  "description": "Raptor",
  "scripts": {
    "clean": "yarn run clean:packages",
    "lint": "lerna run lint",
    "test": "lerna exec -- npm test",
    "build": "lerna run build",
    "build:artifacts": "npm run clean:dist && npm run build && npm run build:engine && npm run build:helpers && npm run build:compiler",
    "build:compiler": "webpack --config scripts/compiler.webpack.js --progress",
    "build:engine": "lerna exec --scope raptor-engine  -- 'npm run build:dist' && cp ./packages/raptor-engine/dist/* ./dist/",
    "build:helpers": "lerna exec --scope babel-helpers-raptor  -- 'npm run build' && cp ./packages/babel-helpers-raptor/dist/* ./dist/",
    "start": "lerna exec yarn start --scope raptor-engine",
    "clean:dist": "rimraf dist/ && git checkout dist/",
    "clean:node_modules": "lerna exec -- rm -rf ./node_modules && rm -rf ./node_modules",
    "clean:packages": "lerna run clean",
    "preinstall": "node -e \"if (process.env.npm_execpath.indexOf('yarn')===-1) throw new Error('npm is not supported, instead use \\\"yarn install\\\"')\"",
    "prepublish": "lerna bootstrap --hoist && yarn run build",
    "release": "yarn run prepublish && lerna publish --exact --force-publish=*"
  },
  "repository": {
    "type": "git",
    "url": "https://git.soma.salesforce.com/raptor/raptor.git"
  },
  "bin": {
    "raptor-compiler": "bin/raptor-compiler-cli.js"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-preset-env": "^1.5.1",
    "glob": "^7.1.1",
    "lerna": "2.0.0",
    "mocha": "^3.2.0",
    "power-assert": "^1.4.2",
    "prettier": "^1.3.1",
    "rimraf": "^2.6.1",
    "string-replace-webpack-plugin": "^0.1.3",
    "webpack": "^2.3.3",
    "webpack-closure-compiler": "^2.1.4"
  }
}
