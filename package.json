{
  "name": "raptor",
  "private": true,
  "description": "Raptor",
  "scripts": {
    "prepublish": "yarn run build",
    "clean": "lerna run clean && lerna clean --yes && rm -rf node_modules",
    "lint": "lerna run lint",
    "test": "lerna exec --ignore lwc-wire-service --concurrency 1 -- yarn test",
    "test:integration": "yarn run build && lerna run sauce --scope lwc-integration",
    "build": "lerna run build --ignore lwc-integration",
    "build:artifacts": "npm run build && npm run build:compiler",
    "build:compiler": "lerna exec --scope lwc-compiler yarn build:umd",
    "build:engine": "lerna run build --scope lwc-engine",
    "start":
      "yarn build:artifacts && lerna run build --scope lwc-integration && lerna run start --scope lwc-integration",
    "release": "yarn run prepublish && lerna publish --force-publish=*",
    "release:canary":
      "yarn run prepublish && lerna publish --force-publish=* --canary --skip-git --yes"
  },
  "repository": {
    "type": "git",
    "url": "https://git.soma.salesforce.com/raptor/raptor.git"
  },
  "bin": {
    "lwc-compiler": "bin/lwc-compiler-cli.js"
  },
  "babel": { "presets": ["env"] },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-preset-env": "^1.6.0",
    "lerna": "2.4.0",
    "rimraf": "^2.6.1"
  },
  "workspaces": ["packages/*"]
}
