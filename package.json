{
  "name": "raptor",
  "private": true,
  "description": "Raptor",
  "scripts": {
    "clean": "lerna run clean && rimraf dist/",
    "prepublish": "yarn run build",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "build": "lerna run build",
    "build:artifacts": "npm run build && npm run build:engine && npm run build:helpers && npm run build:compiler",
    "build:compiler": "webpack --config scripts/compiler.webpack.js --progress",
    "build:engine": "lerna run build --scope raptor-engine && cp ./packages/raptor-engine/dist/* ./dist/ && node ./scripts/engine-concat-compat-proxy.js",
    "build:helpers": "lerna run build --scope babel-helpers-raptor && cp ./packages/babel-helpers-raptor/dist/* ./dist/",
    "start": "lerna run start --scope raptor-fixtures",
    "release": "yarn run prepublish && lerna publish --force-publish=*",
    "release:canary": "yarn run prepublish && lerna publish --force-publish=* --canary --skip-git --yes"
  },
  "repository": {
    "type": "git",
    "url": "https://git.soma.salesforce.com/raptor/raptor.git"
  },
  "bin": {
    "raptor-compiler": "bin/raptor-compiler-cli.js"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-preset-env": "^1.6.0",
    "lerna": "2.0.0",
    "prettier": "^1.5.2",
    "rimraf": "^2.6.1",
    "string-replace-webpack-plugin": "^0.1.3",
    "webpack": "^2.3.3",
    "webpack-closure-compiler": "^2.1.4"
  },
  "workspaces": [
    "packages/*"
  ]
}
