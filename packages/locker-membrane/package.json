{
  "name": "locker-membrane",
  "version": "0.13.1",
  "description": "Membrane implementation for locker service",
  "main": "lib/locker-membrane.common.js",
  "module": "lib/locker-membrane.es.js",
  "jsnext:main": "lib/locker-membrane.es.js",
  "scripts": {
    "clean": "rimraf dist/ lib/",
    "test": "jest --coverage",
    "types": "tsc",
    "lint": "eslint src/**/*.ts",
    "build": "rollup -c scripts/rollup.config.js",
    "prepublish": "yarn run build"
  },
  "publishConfig": {
    "registry": "https://nexus.soma.salesforce.com/nexus/content/repositories/npmjs-internal/"
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-plugin-typescript": "^0.1.0",
    "jest": "^20.0.4",
    "power-assert": "^1.4.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.45.1",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-uglify": "^1.0.1",
    "typescript": "^2.3.4",
    "typescript-eslint-parser": "^3.0.0",
    "uglify-es": "^3.0.24"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "/__tests__/",
    "transform": {
      "^.+\\.(ts|js)$": "<rootDir>/scripts/jest-preprocessor.js"
    },
    "collectCoverageFrom": [
      "src/*.ts"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 55,
        "functions": 50,
        "lines": 70,
        "statements": 75
      }
    }
  }
}
