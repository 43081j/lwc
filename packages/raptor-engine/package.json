{
  "name": "raptor-engine",
  "version": "0.8.1",
  "description": "Raptor Engine",
  "main": "./lib/raptor.js",
  "module": "./lib/raptor.es.js",
  "jsnext:main": "./lib/raptor.es.js",
  "scripts": {
    "clean": "rimraf dist/ fake-cdn/ fake-html/ && git checkout fake-cdn fake-html",
    "test": "jest --coverage --verbose",
    "build": "yarn run build:lib",
    "start": "yarn run build:fixtures && yarn run build:runtime && forever --uid raptor fake-server/server.js & rollup -w -c scripts/rollup.config.lib.js & rollup -w -c scripts/rollup.config.engine.js & node scripts/rollup.services.js --watch & node scripts/build-fixtures.js --watch && forever stop raptor",
    "stop": "forever stopall",
    "build:lib": "rollup -c scripts/rollup.config.lib.js",
    "build:engine:dev": "cross-env NODE_ENV=development rollup -c scripts/rollup.config.engine.js",
    "build:engine:prod": "cross-env NODE_ENV=production rollup -c scripts/rollup.config.engine.js",
    "build:dist": "yarn run build:engine:dev && yarn run build:engine:prod",
    "build:runtime": "babel-external-helpers > fake-cdn/babelHelpers.js",
    "build:fixtures": "node scripts/build-fixtures.js",
    "build:services": "node scripts/rollup.services.js",
    "build:all": "yarn run build:runtime && yarn run build:fixtures --production && yarn run build:services --production && yarn run build:dist && yarn run build:lib",
    "flow": "flow --show-all-errors",
    "flowlint": "flow",
    "prepublish": "yarn run build"
  },
  "publishConfig": {
    "registry": "https://nexus.soma.salesforce.com/nexus/content/repositories/npmjs-internal/"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-jest": "17.0.2",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-polyfill": "^6.13.0",
    "babel-preset-env": "^1.3.2",
    "babel-preset-flow": "^6.23.0",
    "cross-env": "^3.1.4",
    "eslint": "^3.19.0",
    "expect": "^1.20.2",
    "express": "^4.14.0",
    "flow-bin": "^0.43.0",
    "forever": "^0.15.2",
    "glob": "^7.1.1",
    "jest-cli": "17.0.2",
    "mocha": "^3.2.0",
    "power-assert": "^1.4.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^3.3.1",
    "rollup-plugin-flow": "^v1.1.0",
    "rollup-plugin-inject": "^1.4.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-raptor-compiler": "0.8.1",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-strip": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^2.5.0",
    "serve-static": "^1.11.1",
    "sinon": "^1.17.6",
    "snabbdom": "^0.5.4",
    "string-replace-webpack-plugin": "^0.1.3",
    "watch": "^1.0.0",
    "yargs": "^6.0.0"
  },
  "jest": {
    "testRegex": "/__tests__/",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  }
}
