{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,

    "noImplicitAny": false,
    "strictNullChecks": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "lib": [
      "es2016"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "*/__tests__/"
  ]
}
