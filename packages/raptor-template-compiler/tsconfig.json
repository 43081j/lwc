{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "lib": [
      "es2016"
    ]
  },
  "include": [
    "src/**/*",
    "typings/*.d.ts"
  ],
  "exclude": [
    "*/__tests__/"
  ]
}
